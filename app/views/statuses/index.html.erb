
  <h1 class="page-header">Welcome to the statuses page!</h1>

  <% @statuses.each do |status| %>
  <%= link_to "Post a new status", new_status_path, class: "btn btn-success" %>
    <strong><%= status.name %></strong> <br/>
    <p><%= status.content %></p>
   <div class="status">
    <div class="meta">
      <%= link_to time_ago_in_words(status.created_at) + " ago", edit_status_path(status) %>
      <%= link_to "Show", status %>
      <span class="admin">
        <%= link_to "Edit", edit_status_path(status) %>
        <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure, ma niga?" } %>
      </span>
    </div>
  </div>
   
  <% end %>